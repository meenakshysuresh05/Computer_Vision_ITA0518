import cv2
import numpy as np
import os

image_path = r"C:\Users\menak\Downloads\image\Messi x Holanda FWC 22.jpg"

if not os.path.exists(image_path):
    raise FileNotFoundError(f"Image not found at path: {image_path}")

image = cv2.imread(image_path)

if image is None:
    raise ValueError(f"Failed to load image. File may be corrupted or in an unsupported format: {image_path}")

gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
equalized = cv2.equalizeHist(gray)

combined = np.hstack((gray, equalized))
cv2.imshow("Original (Left) vs Equalized (Right)", combined)
cv2.waitKey(0)
cv2.destroyAllWindows()

output_path = r"C:\Users\menak\Downloads\equalized_output.jpg"
cv2.imwrite(output_path, equalized)
print(f"Histogram equalized image saved to: {output_path}")